<h3 class="filter-button">Filter Results By:</h3>
<%= form_tag stores_path, method: :get, class: "filter-form" do %>
Category:
<%= select_tag :category, options_for_select(Store::CATEGORY_CHOICES), include_blank: true, class: "filter-category" %>
Name:
<%= select_tag :name, options_for_select(@names), include_blank: true, class: "filter-category" %>
<%= submit_tag "Search", class: "btn btn-primary" %>
