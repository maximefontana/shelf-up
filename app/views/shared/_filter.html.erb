<div class="flex-box centered medium-text">
  <div class="filter-button">
    Search:
  </div>
  <div>
    <%= form_tag stores_path, method: :get, class: "filter-form" do %>
    Category:
    <%= select_tag :category, options_for_select(Store::CATEGORY_CHOICES), include_blank: true, class: "filter-category" %>
    Name:
    <%= select_tag :name, options_for_select(@names), include_blank: true, class: "filter-category" %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <%#= text_field_tag :commission, params[:commission_max], class: "form-control", placeholder: "Commission Max" %>
    <%#= text_field_tag :commission, params[:commission_min], class: "form-control", placeholder: "Commission Max" %>
    <% end %>
  </div>
</div>
