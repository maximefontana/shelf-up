

<div class="card-container">
<%= render "shared/filter" %>
  <% @stores.each do |store| %>
    <div class="card col-xs-6 col-md-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2));">
      <div class="card-store limit-store">
        <h3><%= link_to store.name, store %></h3>
      </div>
      <div class="card-city limit-city">
        <h3> <%= store.location %> </h3>
      </div>
      <div class="card-description">
        <p><%= store.description if store.description %></p>
      </div>
    </div>
  <% end %>
</div>

